<li>
  <div><%= recipe.name %></div>
  <div><%= link_to image_tag(recipe.photo.thumb.url), recipe.photo.url %></div>
  <div>
    <% recipe.tags.each do |tag| %>
      <span class="secondary radius label"><%= link_to tag, tag_recipes_path(tag.name) %></span>
    <% end %>
  </div>
  <div><%= recipe.directions %></div>
</li>
