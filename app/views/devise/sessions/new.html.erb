<div class="background">
  <%= image_tag 'background.jpg' %>
</div>

<div class="notice">
  <%= notice %>
</div>

<div class="row collapse">
  <div class="large-6 columns main-content">
    <h1>Welcome to Recifree.</h1>
    <p>Create delicious recipes to share with your friends. Post comments and upvote the best dishes to make them stand out.</p>
  </div>

  <div class="large-4 large-offest-2 columns">
    <div class="row collapse">
      <div class="large-12 columns">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <fieldset>
            <div class="row collapse">
              <div class="large-12 columns">
                <%= f.input :email, label: false, placeholder: 'Email', required: false, autofocus: true %>
              </div>
            </div>

            <div class="row collapse">
              <div class="large-8 columns">
                <%= f.input :password, label: false, placeholder: 'Password', required: false %>
              </div>
              <div class="large-4 columns">
                <%= f.button :submit, "Sign in", class: 'button small radius postfix' %>
              </div>
            </div>

            <div class="row collapse">
              <div class="large-5 columns">
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
              <div class="large-7 columns">
                <%= link_to 'Forgot password?', new_user_password_path, class: 'right' %>
              </div>
            </div>
          </fieldset>
        <% end %>
      </div>
    </div>

    <div class="row collapse">
      <div class="large-12 columns">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <fieldset>
            <div class="row collapse">
              <div class="large-12 columns">
                <h4><strong>New To Recifree? </strong><small>Sign up</small></h4>
              </div>
            </div>

            <div class="row collapse">
              <div class="large-12 columns">
                <%= f.input :name, label: false, placeholder: 'Username' %>
              </div>
            </div>

            <div class="row collapse">
              <div class="large-12 columns">
                <%= f.input :email, label: false, placeholder: 'Email', required: true, autofocus: true %>
              </div>
            </div>

            <div class="row collapse">
              <div class="large-12 columns">
                <%= f.input :password, label: false, placeholder: 'Password', required: true %>
              </div>
            </div>

            <div class="row collapse">
              <div class="large-12 columns">
                <%= f.button :submit, "Sign up for Recifree", class: 'button small radius right' %>
              </div>
            </div>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>
